{# Page de Réinitialiser d'email, avec invite de cliquer sur le lien #}
{% extends "base.html.twig" %}

{% block title %}Réinitialiser votre mot de passe
{% endblock %}

{% block stylesheets %}<link rel="stylesheet" href=""{{ asset ('css/reset.css')}}>
{% endblock %}

{% block body %}
    <div class="container">
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h3>Réinitialiser votre mot de passe</h3>

    {{ form_start(requestForm) }}
        <div class="form-floating mb-3">
            {{ form_row(requestForm.email) }}
        </div>
        
        <div>
            <p>
                Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
            </p>
        </div>

        <button class="btn btn-primary">Envoyer l'email de réinitialisation </button>
    {{ form_end(requestForm) }}
    </div>
{% endblock %}